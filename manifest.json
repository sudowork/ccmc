{
  "name": "Chromecast Media Center",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "A media center for Chromecast to manage local media files",
  "homepage_url": "http://localhost",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "options_page": "src/options_custom/index.html",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Chromecast Media Center",
    "default_popup": "src/browser_action/ccmc_popup.html"
  },
  "permissions": [
    "bookmarks",
    "clipboardRead",
    "clipboardWrite",
    "idle"
  ]
}
